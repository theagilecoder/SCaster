<h3 style="margin-top: 90px">Simple Moving Average</h3>
<hr style="margin-top: 0; margin-bottom: 60px;">


<%= form_for(@sma) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    
    <!-- Section 1. Item Information -->
    
    <h4>Section 1. Item Information</h4>
    <hr style="margin-top: 0"> 

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.text_field :item_code, class: "form-control", placeholder: "Item Code (Must be unique)" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
        </div> 
      </div>
    </div><!--First row -->
    
    <!-- Section 2. SMA Values -->
    
    <h4>Section 2. Data for 12 Weeks</h4>
    <hr style="margin-top: 0">
    
    <div class-"row">
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma1, class: "form-control", placeholder: "Week 1", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma2, class: "form-control", placeholder: "Week 2", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma3, class: "form-control", placeholder: "Week 3", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma4, class: "form-control", placeholder: "Week 4", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma5, class: "form-control", placeholder: "Week 5", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma6, class: "form-control", placeholder: "Week 6", step: "any" %>
        </div>
      </div>
    </div><!-- end First row -->
    
    <div class-"row">
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma7, class: "form-control", placeholder: "Week 7", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma8, class: "form-control", placeholder: "Week 8", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma9, class: "form-control", placeholder: "Week 9", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma10, class: "form-control", placeholder: "Week 10", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma11, class: "form-control", placeholder: "Week 11", step: "any" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.number_field :sma12, class: "form-control", placeholder: "Week 12", step: "any" %>
        </div>
      </div>
    </div><!-- end Second row -->
    
    <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>